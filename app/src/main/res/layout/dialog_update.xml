<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1a1a2e">

    <!-- Update Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_popup_sync"
        android:tint="#4CAF50" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update Available!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Version Info -->
    <TextView
        android:id="@+id/tv_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="New version v1.0.0 is available"
        android:textColor="#4CAF50"
        android:textSize="16sp" />

    <!-- Current Version -->
    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Current version: v0.9.0"
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Release Notes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:maxHeight="150dp">

        <TextView
            android:id="@+id/tv_release_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2d2d44"
            android:padding="12dp"
            android:text="Release notes will appear here..."
            android:textColor="#CCCCCC"
            android:textSize="13sp" />
    </ScrollView>

    <!-- Update Now Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_now"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Update Now"
        android:textSize="14sp"
        android:backgroundTint="#4CAF50" />

    <!-- Later Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_later"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="Later"
        android:textColor="#888888" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="#333344" />

    <!-- Opt-out Checkbox -->
    <CheckBox
        android:id="@+id/cb_disable_auto_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't check automatically again"
        android:textColor="#888888"
        android:textSize="13sp"
        android:buttonTint="#4CAF50" />

</LinearLayout>
